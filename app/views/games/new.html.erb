
<div class="container">
  <h1 class="heading">New game</h1>
  <ul class="inline-list">
    <% @letters.each_char do |chr| %>
    <li><%= chr %></li>
    <% end %>
  </ul>

<form action="/score" method="POST" data-turbo="false">
  <p>What's the longest word you can find?</p>
  <div class="field">
      <input class="input" type="text" name="word">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "letters", @letters %>
      <input class="button" type="submit" value="Play">
    </div>
</form>
